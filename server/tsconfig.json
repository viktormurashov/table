{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ES6",
    "lib": [
      "ES6",
    ],
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "allowUnreachableCode": false,
    "skipLibCheck": true
  }
}